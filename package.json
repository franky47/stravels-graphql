{
  "name": "stravels-graphql",
  "version": "0.1.0",
  "private": true,
  "description": "GraphQL data server for Stravels.io",
  "main": "./build/main.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon -e ts,.env -w .env -w . src/main.ts",
    "clean": "rm -rf ./build",
    "test": "jest",
    "build": "tsc",
    "ci": "yarn clean && yarn test && yarn build",
    "install": "yarn build",
    "deploy": "./scripts/deploy.sh"
  },
  "author": "Fran√ßois Best <contact@francoisbest.com>",
  "devDependencies": {
    "@types/compression": "^0.0.36",
    "@types/dotenv": "^6.1.1",
    "@types/graphql": "^14.2.0",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.13",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/morgan": "^1.7.35",
    "@types/ms": "^0.7.30",
    "@types/nanoid": "^2.0.0",
    "@types/node": "^12.0.7",
    "@types/sequelize": "^4.28.3",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "@47ng/check-env": "^1.3.0",
    "@sentry/node": "^5.4.0",
    "apollo-server": "^2.6.2",
    "apollo-server-express": "^2.6.2",
    "axios": "^0.19.0",
    "chalk": "^2.4.2",
    "compression": "^1.7.4",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-graceful-exit": "^0.4.2",
    "express-graphql": "^0.8.0",
    "graphql": "^14.3.1",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "moment-timezone": "^0.5.35",
    "morgan": "^1.9.1",
    "nanoid": "^2.0.3",
    "pg": "^7.11.0",
    "sequelize": "^5.8.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
